fun sayHello(firstname: String, lastname: String?) {
   // parameter fisrtname dan lastname dibuat
    if(lastname == null) {
        println("Hello $firstname")
    } else {
        println("Hello $firstname $lastname")
    }
}

fun main() {
//memasukan argumen budi sebagai firstname dan gunawan sebagai lastname
    sayHello("Budi", "Gunawan")
    sayHello("Eko", null)
}
